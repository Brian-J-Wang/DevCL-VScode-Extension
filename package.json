{
  "name": "devcl",
  "displayName": "DevCl",
  "description": "Integrated to-do list",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devcl.helloMe",
        "title": "Hello Me"
      },
      {
        "command": "devcl.helloWarning",
        "title": "Hello Warning"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "checklistContainer",
          "title": "Check List",
          "icon": "resources/icon.svg"
        },
        {
          "id": "TreeTest",
          "title": "Check List",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "checklistContainer": [
        {
          "type": "webview",
          "id": "devcl.checklist",
          "name": "Check List"
        }
      ],
      "TreeTest": [
        {
          "type": "tree",
          "id": "devcl.treeTest",
          "name": "Tree Test"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
